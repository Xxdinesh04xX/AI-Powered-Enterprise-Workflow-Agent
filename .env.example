# AI/LLM API Configuration
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM Provider (openai, groq, anthropic)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# Database Configuration
DATABASE_URL=sqlite:///./data/workflow_agent.db
DATABASE_ECHO=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_SECRET_KEY=your_secret_key_here

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Vector Store Configuration
VECTOR_STORE_TYPE=faiss
VECTOR_STORE_PATH=./data/vector_store

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/workflow_agent.log

# Classification Thresholds
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.8
PRIORITY_CONFIDENCE_THRESHOLD=0.7

# Assignment Configuration
DEFAULT_ASSIGNMENT_STRATEGY=skill_based
ASSIGNMENT_CONFIDENCE_THRESHOLD=0.75

# Report Configuration
REPORT_OUTPUT_DIR=./reports
REPORT_TEMPLATE_DIR=./templates

# Enterprise Integration (Mock for v1.0)
MOCK_ITSM_ENABLED=true
MOCK_HRMS_ENABLED=true
MOCK_OPS_ENABLED=true

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
DEBUG=true
TESTING=false
